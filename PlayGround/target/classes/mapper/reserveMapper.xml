<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="com.playground.pg.dao.ReserveMapper">
	<select id="selectArt"  parameterType="int" resultType="ArtDto">
		Select * from art
		where exNo = #{exNo}
	</select>
	
	<select id="selectTime"  parameterType="int" resultType="ArtTimeDto">
		Select * from arttime
		where exNo_FK = #{exNo}
	</select>
	
	<select id="selectResCnt"  parameterType="int" resultType="ReserveDto">
		Select * from reserve
		where exNo_FK = #{exNo}
	</select>

	<insert id="insertReserve" parameterType="ReserveDto">
		Insert into reserve
		(id_FK, exNo_FK, reDate, reTime1, reTime2, adCnt, chCnt, 
		payment, point, coupon_FK)
		values
		<choose>
			<when test='chCnt!=null'>
				(#{uId}, #{exNo}, #{reDate}, #{reTime1}, #{reTime2}, #{adCnt}, #{chCnt}, 
				#{payment}, #{point}, #{coupon})
			</when>
			<otherwise>
				(#{uId}, #{exNo}, #{reDate}, #{reTime1}, #{reTime2}, #{adCnt}, 0, 
				#{payment}, #{point}, #{coupon})
			</otherwise>
		</choose>
	</insert>

</mapper>